    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Classification Chart
            const ctxClassification = document.getElementById('classificationChart').getContext('2d');
            new Chart(ctxClassification, {
                type: 'bar',
                data: {
                    labels: ['Logistic Regression', 'Decision Tree', 'Random Forest'],
                    datasets: [{
                        label: 'Accuracy',
                        data: [85.1, 90.8, 92.2],
                        backgroundColor: 'rgba(217, 119, 6, 0.2)',
                        borderColor: 'rgba(217, 119, 6, 1)',
                        borderWidth: 1
                    }, {
                        label: 'F1-Score',
                        data: [85.0, 90.8, 92.2],
                        backgroundColor: 'rgba(71, 85, 105, 0.2)',
                        borderColor: 'rgba(71, 85, 105, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Score (%)'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.raw.toFixed(1)}%`;
                                }
                            }
                        }
                    }
                }
            });

            // Regression Chart
            const ctxRegression = document.getElementById('regressionChart').getContext('2d');
            const regressionData = Array.from({ length: 100 }, () => ({
                x: Math.random() * 1000000 + 100000,
                y: 0
            }));
            regressionData.forEach(point => {
                const noise = (Math.random() - 0.5) * 300000;
                point.y = point.x * 0.84 + noise;
            });

            new Chart(ctxRegression, {
                type: 'scatter',
                data: {
                    datasets: [{
                        label: 'Actual vs. Predicted Price',
                        data: regressionData,
                        backgroundColor: 'rgba(217, 119, 6, 0.6)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            type: 'linear',
                            position: 'bottom',
                            title: {
                                display: true,
                                text: 'Actual Price'
                            },
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000) + 'k';
                                }
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Predicted Price'
                            },
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000) + 'k';
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const xVal = context.raw.x.toLocaleString('en-US', { style: 'currency', currency: 'USD' });
                                    const yVal = context.raw.y.toLocaleString('en-US', { style: 'currency', currency: 'USD' });
                                    return `Actual: ${xVal}, Predicted: ${yVal}`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>

